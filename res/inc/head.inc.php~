<?php
include 'conf.inc.php';
session_start();
function page($boxTitle, $panelType = "default") {
?>
    <html>
        <head>
            <title><?php echo $boxTitle; ?> - simple login</title>
            
            <meta charset="UTF-8">
            
            <?php
            Config::loadResource('bootstrap.min.css');
            Config::loadResource('simple-login.css');
            ?>
        </head>
        
        <body>
            <div id="page-wrapper">
                <div id="page-content">
                    <div class="card card-<?php echo $panelType; ?>">
                        <div class="card-header">
                            <span class="card-title"><?php echo $boxTitle; ?></span>
                        </div>
                        <div class="card-block">
<?php
}

function endPage() {
    ?>
                        </div>
                    </div>
                </div>
            </div>
        </body>
    </html>
    <?php
}
